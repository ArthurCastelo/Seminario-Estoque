services:
  db:
    image: mysql:8
    restart: always
    environment:
      MYSQL_DATABASE: estoque
      MYSQL_ROOT_PASSWORD: root
    ports:
      - "3306:3306"

  web:
    build: .
    command: /entrypoint.sh python manage.py runserver 0.0.0.0:8000
   volumes:
      - .:/code
    ports:
      - "8000:8000"
    depends_on:
      - db
